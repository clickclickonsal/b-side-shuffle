<div class="section-grid group second-section">

	<div class="col span_3_of_5">
		<div id="m-video-section">
			<p>Videos</p>
			<div>
				<% @mains.each do |video| %>
					<iframe src="//www.youtube.com/embed/<%= video.video_url %>" frameborder="0" background="black" allowfullscreen></iframe>
				<% end %>
			</div>
		</div>
	</div>

	<div class="col span_2_of_5">
		<div id="blog-container">
			<p>Blog Posts</p>
			<div class="blog-posts">
					<div>
						<img src='<%= @tumblr_blog_images[0] %>' />
						<%= @tumblr_data[0]['title'] %>
						<%= @tumblr_data[0]['body'] %>
						<button><a href='<%= @tumblr_data[0]['post_url'] %>'>Read More</a></button>
					</div>
					<div>
						<img src='<%= @tumblr_blog_images[1] %>' />
						<%= @tumblr_data[1]['title'] %>
						<%= @tumblr_data[1]['body'] %>
						<button><a href='<%= @tumblr_data[1]['post_url'] %>'>Read More</a></button>
					</div>
			</div>
		</div>
	</div>

</div>

<div class="section-grid group">

	<div class="col span_5_of_5">
		<div id="m-music-section">
		</div>
	</div>

</div>